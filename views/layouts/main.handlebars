<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chicken Boolean</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>    
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <div class="flex-column justify-space-around">

      <header class="container row">
        <div class="col-2">
        <img src="/assets/CBoolean.png" class="img-fluid img-thumbnail" alt="Chicken Boolean logo" />
        </div>
        <h1 class="col d-flex align-items-center justify-content-center">
          <a href="/" >Chicken Boolean</a>
        </h1>
      </header>
      <nav class="nav justify-content-end pe-5">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
          <a href="/myPage">My Page</a>
          |
          <button class="no-button" id="logout">logout</button>
        {{else}}
          <a href="/login">login</a>
        {{/if}}
      </nav>

      <main class="container container-fluid mt-5">
        {{{body}}}

      </main>

      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>