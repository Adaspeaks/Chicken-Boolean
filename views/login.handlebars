<div class="row">
  <div class="card w-50 mx-auto">
    <h2 class="mx-auto">Login</h2>

    <form class="form login-form card-body">
      <div class="form-floating">
        <input class="form-control my-1" type="text" id="username-login" placeholder="Username">
        <label for="username-login">Username</label>
      </div>
      <div class="form-floating">
        <input class="form-control my-1" type="password" id="password-login" placeholder="Password">
        <label for="password-login">Password</label>
      </div>
      <div>
        <div class="form-group d-grid col-4 mx-auto">
          <button class="my-1" type="submit">Login</button>
        </div>
        <div class="form-group d-grid col-5 mx-auto">
          <p class="fw-bold text-center my-1">or</p>
          <a href="/signup" class="my-1 text-center" type="create">Create an Account</a>
        </div>
      </div>

    </form>
  </div>
  
</div>

<script src="./js/login.js"></script>
